{% extends 'base.html.twig' %}

{% block title %}Taille velo{% endblock %}

{% block body %}
<br><br><br>
 <div class="content">
    <div class="card">
        <div class="card-body">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Taille velo </legend>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Nom :</label>
                    <div class="col-lg-10">
                    <div class="form-control">
                    {{taillevelo.nom}}
                    </div></div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Min :</label>
                    <div class="col-lg-10">
                    <div class="form-control">
                    {{taillevelo.min}}
                    </div></div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Max :</label>
                    <div class="col-lg-10">
                    <div class="form-control">
                    {{taillevelo.max}}
                    </div></div>
                </div>
                <br>
                <a href="{{path('show_taillevelos')}}"><button type="button" class="btn btn-primary">Retourner</button></a>
            </fieldset>
        </div>
</div>
</div>
{% endblock %}