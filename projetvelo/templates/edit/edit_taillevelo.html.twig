{% extends 'base.html.twig' %}

{% block title %}Modifier un velo{% endblock %}



{% block body %}
    <br><br><br>
    {{ form_start(form_taillevelo)}}
    <div class="content">
    <div class="card">
        <div class="card-body">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Modifier une taille de velo</legend>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Nom :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_taillevelo.nom, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':'nom'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Min :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_taillevelo.min, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':'Min'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Max :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_taillevelo.max, {'attr' : {'class': 'form-control', 'placeholder':'Max'}})}}
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-success" style="float:right;">Modifier <i class="icon-checkmark3 font-size-base mr-1"></i></button>
                <a href="{{path('show_taillevelos')}}"><button class="btn btn-primary" style="float:left;">Retourner <i class="icon-checkmark3 font-size-base mr-1"></i></button></a>
            </fieldset>
        </div>
</div>
</div>

{{ form_end(form_taillevelo)}}
</form>


{% endblock %}