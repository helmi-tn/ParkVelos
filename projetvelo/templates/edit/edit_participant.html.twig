{% extends 'base.html.twig' %}

{% block title %}Modifier un participant{% endblock %}

{% block javascripts %}
<script src="{{asset('build/global_assets/js/plugins/extensions/jquery_ui/interactions.min.js')}}"></script>
<script src="{{asset('build/global_assets/js/demo_pages/form_select2.js')}}"></script>
{% endblock %}


{% block body %}
    <br><br><br>
    {{ form_start(form_participant,{'attr': {'novalidate': 'novalidate'}} )}}
    <div class="content">
    <div class="card">
        <div class="card-body">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Modifier un participant</legend>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Nom :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_participant.nom, {'attr' : {'class': 'form-control', 'placeholder':'Nom'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Prenom :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_participant.prenom, {'attr' : {'class': 'form-control', 'placeholder':'Prenom'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Velo :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_participant.velo, {'attr' : {'class': 'form-control select-fixed-single select2-hidden-accessible'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Taille de velo :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_participant.taillevelo, {'attr' : {'class': 'form-control select-fixed-single select2-hidden-accessible'}})}}
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-success" style="float:right;">Modifier <i class="icon-checkmark3 font-size-base mr-1"></i></button>
                <a href="{{path('show_participants')}}"><button class="btn btn-primary" style="float:left;">Retourner </button></a>
            </fieldset>
        </div>
</div>
</div>

{{ form_end(form_participant)}}
</form>


{% endblock %}