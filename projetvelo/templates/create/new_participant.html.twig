{% extends 'base.html.twig' %}

{% block title %}New participant{% endblock %}

{% block body %}
    <br><br><br>
    {{ form_start(form_participant,{'attr': {'novalidate': 'novalidate'}} )}}
    <div class="content">
    <div class="card">
        <div class="card-body">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Cr√©er un participant</legend>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Nom :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_participant.nom, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':'Nom'}})}}
                    </div>
                </div>
                 <div class="form-group row">
                    <label class="col-form-label col-lg-2">Prenom :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_participant.prenom, {'attr' : { 'required':'required', 'class': 'form-control', 'placeholder':'Prenom'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Velo :</label>
                    <div class="col-lg-10">
                            {{ form_widget(form_participant.velos)}}
                            
                            
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Taille de velo :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_participant.taillevelo, {'attr' : { 'class': 'form-control-uniform', 'placeholder':'Velo'}})}}
                    </div>
                </div>

                <br>
                <button type="submit" class="btn btn-primary" style="float:right;">Commander <i class="icon-checkmark3 font-size-base mr-1"></i></button>
            </fieldset>
        </div>
</div>
</div>

{{ form_end(form_participant)}}
</form>

{% endblock %}