{% extends 'base.html.twig' %}

{% block title %}New site{% endblock %}

{% block body %}
    <br><br><br>
    {{ form_start(form_site)}}
    <div class="content">
    <div class="card">
        <div class="card-body">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Cr√©er un site</legend>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Nom :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_site.nom, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':'Nom'}})}}
                    </div>
                </div>
                 <div class="form-group row">
                    <label class="col-form-label col-lg-2">Description :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_site.description, {'attr' : { 'class': 'form-control', 'placeholder':'Description'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Map :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_site.map, {'attr' : { 'class': 'form-control', 'placeholder':'Map'}})}}
                    </div>
                </div>
                 <div class="form-group row">
                    <label class="col-form-label col-lg-2">Icon :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form_site.icon, {'attr' : {'class': 'form-control', 'placeholder':'Icon'}})}}
                    </div>
                </div>

                <br>
                <button type="submit" class="btn btn-primary" style="float:right;">Submit <i class="icon-checkmark3 font-size-base mr-1"></i></button>
            </fieldset>
        </div>
</div>
</div>

{{ form_end(form_site)}}
</form>

{% endblock %}