{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block javascripts %}
    <script src="{{asset('build/global_assets/js/plugins/forms/validation/validate.min.js')}}"></script>
	<script src="{{asset('build/global_assets/js/plugins/forms/inputs/touchspin.min.js')}}"></script>
	<script src="{{asset('build/global_assets/js/plugins/forms/styling/switch.min.js')}}"></script>
	<script src="{{asset('build/global_assets/js/plugins/forms/styling/switchery.min.js')}}"></script>
    <script src="{{asset('build/global_assets/js/demo_pages/form_validation.js')}}"></script>
{% endblock %}

{% block body %}
    <br><br><br>
    {{form_start(form, {'attr': {'class':'form-validate-jquery', 'novalidate': 'novalidate'}}) }}
    <div class="content">
    <div class="card">
        <div class="card-body">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-l font-weight-bold">S'inscrire </legend>

                 <div class="form-group row">
                    <label class="col-form-label col-lg-2">Username :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.username, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':'ex : user01...'}})}}
                        <div class="form-error font-weight-semibold text-danger border-danger">
                            {{ form_errors(form.username) }}
                         </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">E-mail :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.email, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':'ex : user@mail.com...'}})}}
                        <div class="form-error font-weight-semibold text-danger border-danger">
                            {{ form_errors(form.email) }}
                         </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Mot de passe :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.password, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':''}})}}
                        <div class="form-error font-weight-semibold text-danger border-danger">
                            {{ form_errors(form.password) }}
                         </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Confirmation de mot de passe :</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.confirm_password, {'attr' : {'required':'required' , 'class': 'form-control', 'placeholder':''}})}}
                        <div class="form-error font-weight-semibold text-danger border-danger">
                            {{ form_errors(form.confirm_password) }}
                         </div>
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-success" style="float:right;">S'inscrire <i class="icon-checkmark3 font-size-base mr-1"></i></button>
            </fieldset>
        </div>
</div>
</div>

{{ form_end(form)}}



{% endblock %}
