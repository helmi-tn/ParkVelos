{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block javascripts %}
    <script src="{{asset('build/global_assets/js/plugins/forms/validation/validate.min.js')}}"></script>
	<script src="{{asset('build/global_assets/js/plugins/forms/inputs/touchspin.min.js')}}"></script>
	<script src="{{asset('build/global_assets/js/plugins/forms/styling/switch.min.js')}}"></script>
	<script src="{{asset('build/global_assets/js/plugins/forms/styling/switchery.min.js')}}"></script>
    <script src="{{asset('build/global_assets/js/demo_pages/form_validation.js')}}"></script>
{% endblock %}

{% block body %}
<br><br><br>
    <form action="{{path('connexion')}}" method="post" class="form-validate-jquery" novalidate="novalidate">
    <div class="content">
        <div class="card">
            <div class="card-body">
                <fieldset class="mb-3">
                    <legend class="text-uppercase font-size-l font-weight-bold">Se connecter </legend>

                    <div class="form-group row">
                        <label class="col-form-label col-lg-2">E-mail :</label>
                        <div class="col-lg-10">
                            <input placeholder="Adresse email..." required name="_username" type="username" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-lg-2">Mot de passe :</label>
                        <div class="col-lg-10">
                            <input placeholder="Mot de passe..." required name="_password" type="password" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success" style="float:right;">Se connecter <i class="icon-checkmark3 font-size-base mr-1"></i></button>
                    </fieldset>
            </div>
        </div>
    </div>
    </form>
{% endblock %}